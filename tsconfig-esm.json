{
    "compilerOptions": {
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "outDir": "dist/esm",
        "removeComments": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "es5",
        "types" : [
            "es6-shim"
        ]
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
